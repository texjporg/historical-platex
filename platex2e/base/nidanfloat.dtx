% \begin{macro}{\@addtotoporbot}
% フロートを保持しているリスト変数の修正。
%    \begin{macrocode}
\def\@addtotoporbot{%
  \@getfpsbit \tw@
  \ifodd\@tempcnta
    \@flsetnum\@topnum
    \ifnum\@topnum>\z@
      \@tempswafalse
      \@flcheckspace\@toproom{\@toplist\L@toplist\R@toplis}
      \if@tempswa
